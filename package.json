{
    "name": "conan-tools",
    "displayName": "conan-tools",
    "description": "VS Code extension for conan tools",
    "version": "0.0.1",
    "publisher": "Keysight",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:conanfile.py"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "conan_tools",
                    "title": "Conan Tools",
                    "icon": "res/conan_icon.svg"
                }
            ]
        },
        "views": {
            "explorer": [
                {
                    "id": "conan.configure",
                    "name": "conan"
                }
            ]
        },
        "commands": [
            {
                "command": "conan.install",
                "title": "Install",
                "icon": "res/conan_install.svg"
            },
            {
                "command": "conan.build",
                "title": "Build",
                "icon": "res/conan_build.png"
            },
            {
                "command": "conan.selectProfile",
                "title": "Select a conan profile"
            },
            {
                "command": "conan.options",
                "title": "Set options for conan install"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "conan.install"
                },
                {
                    "command": "conan.build"
                }
            ],
            "view/title": [
                {
                    "command": "conan.build",
                    "when": "view == conan.configure",
                    "group": "navigation"
                },
                {
                    "command": "conan.install",
                    "when": "view == conan.configure",
                    "group": "navigation"
                },
                {
                    "command": "conan.selectProfile",
                    "when": "view == conan.configure"
                },
                {
                    "command": "conan.options",
                    "when": "view == conan.configure"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
