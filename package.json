{
    "name": "conan-tools",
    "displayName": "conan-tools",
    "description": "VS Code extension for conan tools",
    "version": "0.0.1",
    "publisher": "Keysight",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:conanfile.py"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
			"activitybar": [
				{
					"id": "conan_tools",
					"title": "Conan Tools",
					"icon": "res/conan_icon.svg"
				}
			]
        },
        "views": {
            "conan_tools":[
                {
                    "id": "conan.install",
                    "name": "conan install"
                },
                {
                    "id":"conan.build",
                    "name": "conan build"
                }
            ]
		},
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            },
            {
                "command": "conan.install",
                "title": "Install Conan Dependencies",
                "icon": "res/conan_install.svg"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "conan.install"
                }
            ],
            "view/title": [
                {
                    "command": "conan.install",
                    "when": "view == conan.install",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
